{
  "name": "uv-devcontainer-template",
  "build": {
    "dockerfile": "Dockerfile.cuda",
    "context": ".."
  },
  "runArgs": ["--gpus", "all"],
  "remoteUser": "vscode",
  "mounts": [
    "source=uv-cache,target=/home/vscode/.cache/uv,type=volume"
  ],
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.cache/uv && uv sync",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff"
      ]
    }
  }
}